# 设置许可证密钥有效期(天)
netlify env:set LICENSE_EXPIRY_DAYS 1

# 设置许可证密钥长度
netlify env:set LICENSE_KEY_LENGTH 16

# 设置消息保存时间(天)
netlify env:set MESSAGE_RETENTION_DAYS 30

# 设置最大在线客服数
netlify env:set MAX_ONLINE_AGENTS 30

# 设置单个客服最大对话数
netlify env:set MAX_CHATS_PER_AGENT 500

# 设置 API 基础URL(如果有后端)
netlify env:set VITE_API_BASE_URL https://api.yourbackend.com

# 设置应用名称
netlify env:set VITE_APP_NAME "云客"

# 设置版本号
netlify env:set VITE_APP_VERSION "1.0.0"

# 设置加密密钥(用于敏感数据加密)
netlify env:set ENCRYPTION_KEY "your-secret-key"

# 查看所有环境变量
netlify env:list

# 查看特定环境变量
netlify env:get VITE_APP_NAME
